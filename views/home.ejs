<html>
<head>
<title>Web Page Maker
</title>
<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>

</head>

<body>
<textarea id="content" placeholder="Paste code here" rows="20" cols="100" ></textarea><br>
<input type="button" onclick="make()" value="Upload HTML" />
<p id="url"></p>
<script>
function make()
{
	var content=document.getElementById("content").value;
		
		$.post('/makehtml',{content:content},function(data,status){
						
					

					if(data=="error")
					{	
						alert("Something Went Wrong !");
					}
					else
					{
						
						
						
							document.getElementById("url").innerHTML=data;
						
					}
			}
			);
}
</script>
</body>
</html>